<%= render "shared/header"%>
<main class="l-container clearfix">
  <div class="l-content">
    <section class="mypage-tab-container">
      <h2 class="mypage-tab-head">出品した商品</h2>
      <ul class="listing-tabs">
        <li class="active">
          <h3>
            <a href="#mypage-tab-transaction-now" data-toggle="tab">
            出品中
            </a>
          </h3>
        </li>
        <li class="">
          <h3>
            <%= link_to "取引中", in_progress_items_path %>
          </h3>
        </li>
        <li class="">
          <h3>
            <%= link_to "売却済み", completed_items_path %>
          </h3>
        </li>
      </ul>
      <div class="tab-content">
        <ul id="mypage-tab-transaction-now" class="mypage-item-list tab-pane active">
          <% if @items.presence %>
            <%= render partial: "item", collection: @items %>
          <% else %>
            <li class="mypage-item-not-found bold">出品中の商品がありません</li>
          <% end %>
        </ul>
      </div>
    </section>
    <ul class="mypage-history pager">
      <li class="pager-prev pager-cell">
        <a href=""><i class="fas fa-angle-left"></i></a>
      </li>
      <li class="pager-next-fix pager-cell">
        <a href=""><i class="fas fa-angle-right"></i></a>
      </li>
    </ul>
  </div>
  <%= render "shared/sidebar" %>
</main>

<%= render "shared/seller-button" %>
<%= render "shared/footer" %>
