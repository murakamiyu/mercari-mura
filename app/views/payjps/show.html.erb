<%= render "shared/header"%>
<main class="l-container clearfix">
  <div class="l-content">
    <section class="l-chapter-container">
      <% if current_user.customer.present? %>
        <h2 class="l-chapter-head">支払い方法</h2>
        <div class="l-single-inner">
          <section>
            <h2 class="l-chapter-head">登録済み</h2>
          </section>
          <div class="settings-not-regist">
            <a href="#" target="_blank"><span>支払い方法について</span><i class="icon-arrow-right"></i></a>
          </div>
        </div>
      <% else %>
        <h2 class="l-chapter-head">支払い方法</h2>
        <div class="l-single-inner">
          <section>
            <div class="l-single-content">
              <h3 class="l-chapter-sub-head">クレジットカード一覧</h3>
            </div>
            <ul class="settings-payment-list">
            </ul>
          </section>
          <section class="settings-add-card">
            <div class="l-single-content">
              <%= link_to new_payjp_path, class: "btn-default btn-red submit_button" do %>
                <i class="icon-card"></i>
                クレジットカードを追加する
              <% end %>
            </div>
          </section>
          <div class="settings-not-regist">
            <a href="#" target="_blank"><span>支払い方法について</span><i class="icon-arrow-right"></i></a>
          </div>
        </div>
      <% end %>
    </section>
  </div>
  <%= render "shared/sidebar" %>
</main>

<%= render "shared/seller-button" %>
<%= render "shared/footer" %>



