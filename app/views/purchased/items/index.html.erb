<%= render "shared/header"%>
<main class="l-container clearfix">
  <div class="l-content">
    <section class="mypage-tab-container">
      <h2 class="mypage-tab-head">購入した商品</h2>
      <ul class="mypage-tabs">
        <li class="">
          <h3>
            <%= link_to purchase_items_path do %>
              取引中
            <% end %>
          </h3>
        </li>
        <li class="active">
          <h3>
            <%= link_to purchased_items_path do %>
              過去の取引
            <% end %>
          </h3>
        </li>
      </ul>
      <div class="tab-content">
        <ul id="mypage-tab-transaction-now" class="mypage-item-list tab-pane">
          <li class="mypage-item-not-found bold">取引中の商品がありません</li>
        </ul>
        <ul id="mypage-tab-transaction-old" class="mypage-item-list tab-pane active">
          <% if @items.presence %>
            <%= render partial: "item", collection: @items %>
          <% else %>
            <li class="mypage-item-not-found bold">過去に取引した商品がありません</li>
          <% end %>
        </ul>
      </div>
    </section>
  </div>
  <%= render "shared/sidebar" %>
</main>

<%= render "shared/seller-button" %>
<%= render "shared/footer" %>
